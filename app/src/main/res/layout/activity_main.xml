<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/mistyrose"
    tools:context="com.example.shenliping.mytesttwo.MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名："/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit1"
            android:hint="输入姓名"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学号："/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit2"
            android:hint=" 输入学号"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RelativeLayout4"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="0dp">
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/hobby"
            android:text="爱好："/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="篮球"
            android:id="@+id/c1"
            android:checked="true"
            android:layout_below="@+id/hobby"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/c2"
            android:layout_below="@id/c1"
            android:text="足球"

            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/c2"
            android:id="@+id/c3"
            android:text="排球"/>

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RelativeLayout3"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0px"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别："
                android:id="@+id/sex"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sex"
                android:id="@+id/sexa">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/man"
                    android:text="男"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/woman"
                    android:text="女"/>
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RelativeLayout6"

            android:layout_marginTop="0dp"
            android:layout_marginLeft="120px"
            >
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市："
            android:id="@+id/myCity"/>
            <Spinner
                android:id="@+id/city"
                android:layout_below="@+id/myCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/cityArray"/>
            </RelativeLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout6"
        android:layout_marginLeft="20dp"
        android:id="@+id/LinearLayout3"
        android:orientation="horizontal"
        >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="文件操作"
        android:id="@+id/file"
        android:layout_centerHorizontal="true"
        android:background="#01000000"
        android:textColor="@color/me"
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="数据库操作"
            android:layout_marginLeft="70dp"
            android:id="@+id/database"
            android:layout_centerHorizontal="true"
            android:background="#01000000"
            android:textColor="@color/me"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="编辑"
            android:layout_marginLeft="30dp"
            android:id="@+id/edit"
            android:layout_centerHorizontal="true"
            android:background="#01000000"
            android:visibility="gone"
            android:textColor="@color/me"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout3"
        android:layout_marginLeft="20dp"
        android:id="@+id/LinearLayout4"
        android:orientation="horizontal"
        android:visibility="gone"
        >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写文件"
        android:id="@+id/write1"
        android:layout_alignBaseline="@+id/read"
        android:layout_alignBottom="@+id/read"
        android:layout_centerHorizontal="true"
        android:background="#01000000"
        android:textColor="@color/me"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读文件"
        android:id="@+id/read1"
        android:layout_marginLeft="70dp"
        android:background="#01000000"
        android:textColor="@color/me"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout4"
        android:layout_marginLeft="20dp"
        android:id="@+id/LinearLayout5"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <EditText
            android:id="@+id/showF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="3"
            android:minLines="3"
            android:hint="显示文件内容"
            android:textColor="#cccc00"
            android:textSize="15sp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RelativeLayout5"
        android:layout_below="@+id/LinearLayout4"
        android:layout_marginLeft="0px"
        android:visibility="gone"
        >
    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/add"
        android:textSize="12sp"
        android:layout_marginLeft="30px"
        android:text="增加"
        />
        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/select2"
            android:text="条件"
            android:layout_marginLeft="70dp"
            android:textSize="12sp"
            />
        <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/update"
        android:text="修改"
        android:layout_marginLeft="120dp"
        android:textSize="12sp"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/select"
        android:text="查询"
        android:layout_marginLeft="170dp"
        android:textSize="12sp"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/select1"
        android:text="函数"
        android:layout_marginLeft="220dp"
        android:textSize="12sp"
        />
        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/delete"
            android:text="删除"
            android:layout_marginLeft="270dp"
            android:textSize="12sp"
            />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:background="#DDDDDD"
        android:id="@+id/tableLayout"
        android:collapseColumns="">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E6E6FA"
            android:layout_margin="5dp"
            android:id="@+id/row1">
            <EditText
                android:background="#E6E6FA"
                android:layout_width="match_parent"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:text="姓名"
                android:id="@+id/row_name"
                />
            <EditText
                android:background="#E6E6FA"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:text="学号"
                android:id="@+id/row_number"/>
            <EditText
                android:background="#E6E6FA"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:text="性别"
                android:id="@+id/row_sex"/>
            <EditText
                android:background="#E6E6FA"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:text="爱好"
                android:id="@+id/row_hobby"/>
            <EditText
                android:background="#E6E6FA"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:text="城市"
                android:id="@+id/row_city"/>
            <EditText
                android:background="#E6E6FA"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:hint="总数"
                android:id="@+id/count"/>

        </TableRow>

        <LinearLayout
            android:layout_below="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/listview"
                android:background="#ffcc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>

        </LinearLayout>
    </TableLayout>
        <LinearLayout
            android:id="@+id/delLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableLayout">
            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/del_all"
                android:text="全选"
                android:layout_marginLeft="270dp"
                android:textSize="12sp"
                android:visibility="gone"
                />
      </LinearLayout>



    </RelativeLayout>
</RelativeLayout>